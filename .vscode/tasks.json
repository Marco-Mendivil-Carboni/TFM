//Workspace tasks to generate gnuplot figures
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gnuplot: load active file",
            "command": "/usr/bin/gnuplot",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gnuplot"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}
