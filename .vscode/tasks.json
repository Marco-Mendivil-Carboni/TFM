{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.bin",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "CUDA C/C++: build active file",
            "command": "/usr/local/cuda-11.4/bin/nvcc",
            "args": [
                "-gencode",
                "arch=compute_35,code=sm_35",
                "-Wno-deprecated-gpu-targets",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.bin",
                "-lcurand"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "gnuplot: load active file",
            "command": "/usr/bin/gnuplot",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gnuplot"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}
